package com.bms.www.controller;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.bms.www.model.User;
import com.bms.www.service.AuthService;

@CrossOrigin(origins = "")
@RestController
@RequestMapping("api/auth")
public class AuthController {
	
	@Autowired
	AuthService authService;
	
    // Endpoint for User Login
	@PostMapping("/login")
	public boolean login(@RequestBody Map<String, String> data)
	{
		// Extracts username and password from the JSON request body
		return authService.login(data.get("username"), data.get("password"));
	}
	
    // Endpoint for User Registration (Onboarding)
	@PostMapping("/register")
	public User register(@RequestBody User user)
	{
		return authService.register(user);
	}

}
